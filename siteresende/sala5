    <script>
      var senha
      var dbref = firebase.database().ref('/ServidorResende/video/')
      var dbrefSala1 = firebase.database().ref('/ServidorResende/salas/sala5')
      dbref.on('child_added', function (data) {
        var localVideo = data.val()
        if(window.location.hash) {
           senha = window.location.hash.substring(1); //Puts hash in variable, and removes the # character
          } else {
              // No hash found
              senha = window.prompt('Digite a senha')
          }
            callFrame = window.DailyIframe.createFrame({
                  iframeStyle: {
                    position: 'fixed',
                    border: 0,
                    top: 0, left: 0,
                    width: '100%',
                    height: '100%'
                  },
                  showLeaveButton: true,
                  showFullscreenButton: true,
                });
            callFrame.join({ url: 'https://' + localVideo + '/' + 'sala5' })
      })
      setInterval(function(){
            dbrefSala1.set(senha).then(() => {

            }) 
        }, 1000);

        window.addEventListener('beforeunload', (event) => {
            clearInterval()
            dbrefSala1.set(1).then(() => {

            })
        });
    </script>
